<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#DBDBDD"
  android:orientation="vertical"
  tools:context=".fragment.AboutFragment">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/title_bg"
    android:gravity="center"
    android:text="我的"
    android:textColor="@android:color/white"
    android:textSize="20sp" />

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@android:color/white"
    android:padding="15dp">

    <androidx.cardview.widget.CardView
      android:id="@+id/about_user_header_content"
      android:layout_width="140dp"
      android:layout_height="90dp"
      android:layout_marginRight="16dp"
      app:cardCornerRadius="14dp">

      <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/header" />
    </androidx.cardview.widget.CardView>

    <TextView
      android:id="@+id/about_user_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_toRightOf="@id/about_user_header_content"
      android:text=""
      android:textColor="@android:color/black"
      android:textSize="20sp" />

    <TextView
      android:id="@+id/about_user_mark"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/about_user_name"
      android:layout_marginTop="20dp"
      android:layout_toRightOf="@id/about_user_header_content"
      android:text=""
      android:textColor="@android:color/black"
      android:textSize="20sp" />
  </RelativeLayout>

  <TextView
    android:id="@+id/about_user_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@android:color/white"
    android:padding="10dp"
    android:text="个人信息"
    android:textColor="@android:color/black"
    android:textSize="18sp" />

  <TextView
    android:id="@+id/about_user_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@android:color/white"
    android:padding="10dp"
    android:text="我的订单"
    android:textColor="@android:color/black"
    android:textSize="18sp" />

  <TextView
    android:id="@+id/about_user_recharge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@android:color/white"
    android:padding="10dp"
    android:text="充值"
    android:textColor="@android:color/black"
    android:textSize="18sp" />

  <TextView
    android:id="@+id/about_app_versions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@android:color/white"
    android:padding="10dp"
    android:text="版本"
    android:textColor="@android:color/black"
    android:textSize="18sp" />

  <Button
    android:id="@+id/about_exit_login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="40dp"
    android:layout_marginRight="20dp"
    android:background="@android:color/holo_red_light"
    android:text="退出登录"
    android:textColor="@android:color/white"
    android:textSize="16sp" />
</LinearLayout>