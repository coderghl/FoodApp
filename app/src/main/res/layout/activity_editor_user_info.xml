<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".activity.EditorUserInfoActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/title_bg"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
      android:id="@+id/editor_user_back"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:src="@mipmap/back" />

    <TextView
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginRight="14dp"
      android:layout_weight="1"
      android:gravity="center"
      android:text="编辑信息"
      android:textColor="@android:color/white"
      android:textSize="20sp" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    android:orientation="vertical"
    android:padding="15dp">

    <EditText
      android:id="@+id/editor_user_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="用户名"
      android:maxLength="10"
      android:maxLines="1" />

    <EditText
      android:id="@+id/editor_user_password"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="密码"
      android:inputType="numberPassword"
      android:maxLength="10"
      android:maxLines="1" />

    <EditText
      android:id="@+id/editor_user_confirm_password"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="再次确认密码"
      android:inputType="numberPassword"
      android:maxLength="10"
      android:maxLines="1" />

    <EditText
      android:id="@+id/editor_user_address"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="地址"
      android:maxLength="10"
      android:maxLines="1" />

    <EditText
      android:id="@+id/editor_user_tel"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="电话号码"
      android:inputType="phone"
      android:maxLength="10"
      android:maxLines="1" />

    <EditText
      android:id="@+id/editor_user_money"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="金额"
      android:inputType="phone"
      android:maxLength="10"
      android:maxLines="1" />

    <EditText
      android:id="@+id/editor_user_mark"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="简介"
      android:inputType="phone"
      android:maxLength="10"
      android:maxLines="1" />

    <RadioGroup
      android:id="@+id/editor_user_sex"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <RadioButton
        android:id="@+id/editor_man"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="男" />

      <RadioButton
        android:id="@+id/editor_woman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="女" />
    </RadioGroup>

    <Button
      android:id="@+id/editor_user_up"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:background="#5493F3"
      android:text="编辑"
      android:textColor="@android:color/white"
      android:textSize="18sp" />
  </LinearLayout>
</LinearLayout>