<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#DBDBDD"
  android:orientation="vertical"
  tools:context=".activity.UserInfoActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/title_bg"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
      android:id="@+id/user_info_back"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:src="@mipmap/back" />

    <TextView
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center"
      android:text="个人信息"
      android:textColor="@android:color/white"
      android:textSize="20sp" />

    <ImageView
      android:id="@+id/user_info_menu"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:src="@mipmap/menu" />
  </LinearLayout>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@android:color/white"
    android:gravity="center"
    android:paddingLeft="15dp      "
    android:paddingTop="10dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
      android:id="@+id/about_user_header_content"
      android:layout_width="140dp"
      android:layout_height="90dp"
      android:layout_marginRight="16dp"
      app:cardCornerRadius="14dp">

      <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/header" />
    </androidx.cardview.widget.CardView>
  </RelativeLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
      android:id="@+id/user_info_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@android:color/black"
      android:textSize="18sp" />

    <TextView
      android:id="@+id/user_info_mark"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/shape_user_info_mark_bg"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:text=""
      android:textColor="#2C2C2C" />
  </LinearLayout>

  <TextView
    android:id="@+id/user_info_sex"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@android:color/white"
    android:padding="10dp"
    android:textColor="@android:color/black"
    android:textSize="18sp" />

  <TextView
    android:id="@+id/user_info_money"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@android:color/white"
    android:padding="10dp"
    android:textColor="@android:color/black"
    android:textSize="18sp" />


  <TextView
    android:id="@+id/user_info_tel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@android:color/white"
    android:padding="10dp"
    android:textColor="@android:color/black"
    android:textSize="18sp" />


  <TextView
    android:id="@+id/user_info_address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@android:color/white"
    android:padding="10dp"
    android:textColor="@android:color/black"
    android:textSize="18sp" />
</LinearLayout>